@model SalesSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="text-center mb-5">
        <h1 class="fw-bold" style="font-size: 50px;">Dashboard</h1>
        <p class="text-muted">Your smart overview of the entire sales system.</p>
        @* <img src="~/images/dashboard.svg" alt="Dashboard Graphic" height="240" class="img-fluid" /> *@
    </div>

    <!-- KPI CARDS -->
    <div class="row g-4">

        <!-- Total Revenue -->
        <div class="col-md-6">
            <div class="card shadow border-start-primary h-100 kpi-card" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <div class="card-body">
                    <h6 class="text-primary text-uppercase small">@Html.DisplayNameFor(m => m.TotalRevenue)</h6>
                    <h3 class="fw-bold">@Model.TotalRevenue.ToString("C")</h3>
                    <i class="fas fa-money-bill-wave fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow border-start-dark h-100 kpi-card" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <div class="card-body">
                    <h6 class="text-primary text-uppercase small">Average Revenue (Per Sale)</h6>
                    <h3 class="fw-bold">
                        @* @Model.TotalRevenue.ToString("C") *@
                        @(Model.TotalRevenue > 0
                                                ? Math.Round((Model.TotalRevenue / Model.TotalSalesCount), 2).ToString("C")
                                                : 0)
                    </h3>
                    <i class="fas fa-money-bill-wave fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>
        <!-- Total Sales -->
        <div class="col-xl-4 col-md-6">
            <div class="card shadow border-start-success h-100 kpi-card">
                <div class="card-body">
                    <h6 class="text-success text-uppercase small">@Html.DisplayNameFor(m => m.TotalSalesCount)</h6>
                    <h3 class="fw-bold">@Model.TotalSalesCount</h3>
                    <i class="fas fa-shopping-cart fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>

        <!-- Total Customers -->
        <div class="col-xl-4 col-md-6">
            <div class="card shadow border-start-info h-100 kpi-card">
                <div class="card-body">
                    <h6 class="text-info text-uppercase small">@Html.DisplayNameFor(m => m.TotalCustomersCount)</h6>
                    <h3 class="fw-bold">@Model.TotalCustomersCount</h3>
                    <i class="fas fa-users fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>

        <!-- Total Products -->
        <div class="col-xl-4 col-md-6">
            <div class="card shadow border-start-warning h-100 kpi-card">
                <div class="card-body">
                    <h6 class="text-warning text-uppercase small">@Html.DisplayNameFor(m => m.TotalProductsCount)</h6>
                    <h3 class="fw-bold">@Model.TotalProductsCount</h3>
                    <i class="fas fa-box fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- TOP CUSTOMERS -->
    <div class="row g-4 mt-4">

        <!-- Top Customer by Sales -->
        <div class="col-md-6">
            <div class="card shadow border-start-dark h-100">
                <div class="card-body">
                    <h6 class="text-primary text-uppercase small">@Html.DisplayNameFor(m => m.TopCustomerName) 🏆</h6>
                    <h4 class="fw-bold">
                        @Model.TopCustomerName
                        <span class="text-muted">— @Model.TopCustomerSalesCount sales</span>
                    </h4>
                    <i class="fas fa-award fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>

        <!-- Top Customer by Revenue -->
        <div class="col-md-6">
            <div class="card shadow border-start-success h-100">
                <div class="card-body">
                    <h6 class="text-warning text-uppercase small">@Html.DisplayNameFor(m => m.TopCustomerRevName) 🏆</h6>
                    <h4 class="fw-bold">
                        @Model.TopCustomerRevName
                        <span class="text-muted">— @Model.TopCustomerRevenue.ToString("C")</span>
                    </h4>
                    <i class="fas fa-trophy fa-2x text-gray-300 kpi-icon"></i>
                </div>
            </div>
        </div>
    </div>


    <div class="row g-4 align-items-stretch">
        <div class="col-lg-8 d-flex">
            <!-- SALES OVER TIME CHART -->
            <div class="card shadow mt-5 w-100">
                <div class="card-header">
                    <h6 class="fw-bold text-primary m-0">Sales Over Time</h6>
                </div>
                <div class="card-body">
                    <canvas id="salesChart" height="120"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4 d-flex">
            <!-- Momo, Cash or Card -->
            <div class="card shadow mt-5 w-100">
                <div class="card-header">
                    <h6 class="fw-bold text-primary text-center m-0">Top Products Per Quantity Sold</h6>
                </div>
                <div class="card-body">
                    <canvas id="topProductsChart" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    

    @* <div class= "row g-4">
         @* Top Products 
        <div class="col-lg-6">
            <div class="card shadow mt-5">
                <div class="card-header">
                    <h6 class="fw-bold text-primary text-center m-0">Payment Methods</h6>
                </div>
                <div class="card-body">
                    <canvas id="paymentChart" height="90"></canvas>
                </div>
            </div>
        </div>
    </div> *@

    @* Other analytics showed in the accordian  *@

   <div class="accordion" id="accordionPanelsStayOpenExample">
       @* Todays stat  *@
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#today-stats" aria-expanded="true" aria-controls="today-stats">
                    📅 Today’s Stats -   @DateTime.Today.DayOfWeek @DateTime.Today.ToShortDateString()
                </button>
            </h2>

            <div id="today-stats" class="accordion-collapse collapse show">
                <div class="accordion-body">

                    <div class="row text-center justify-content-center h-100">

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Revenue</h6>
                            <p class="fs-5 fw-semibold">@Model.TodayRevenue.ToString("C")</p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Sales</h6>
                            <p class="fs-5 fw-semibold">@Model.TodaySalesCount</p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Most Sold Product</h6>
                            <p class="fs-5 fw-semibold m-0">
                                @(Model.TodayTopProduct ?? "No sales today")
                                <p class="m-0 text-muted">(@Model.TodayTopProductQuantity sold)</p>
                            </p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Average Sale Value</h6>
                            <p class="fs-5 fw-semibold">
                                @(Model.TodaySalesCount > 0
                                    ? Math.Round((Model.TodayRevenue / Model.TodaySalesCount), 2).ToString("C")
                                    : 0)
                            </p>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        @* Weekly stat  *@
      <div class="accordion-item">
        <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                    📅 This Week’s Stats - @Model.WeekRange
          </button>
        </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                <div class="accordion-body">

                    <div class="row text-center justify-content-center h-100">

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Revenue</h6>
                            <p class="fs-5 fw-semibold">@Model.WeekRevenue.ToString("C")</p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Sales</h6>
                            <p class="fs-5 fw-semibold">@Model.WeekSalesCount</p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Most Sold Product</h6>
                            <p class="fs-5 fw-semibold m-0">
                                @(Model.TodayTopProduct ?? "No sales today")
                                <p class="m-0 text-muted">(@Model.WeekTopProductQuantity sold)</p>
                            </p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Average Sale Value</h6>
                            <p class="fs-5 fw-semibold">
                                @(Model.WeekSalesCount > 0
                                    ? Math.Round((Model.WeekRevenue / Model.WeekSalesCount), 2).ToString("C")
                                    : 0)
                            </p>
                        </div>

                    </div>

                </div>
            </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                    📅 This Month’s Stats - @DateTime.Today.ToString("MMMM")
          </button>
        </h2>
        <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                <div class="accordion-body">

                    <div class="row text-center justify-content-center h-100">

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Revenue</h6>
                            <p class="fs-5 fw-semibold">@Model.MonthRevenue.ToString("C")</p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Sales</h6>
                            <p class="fs-5 fw-semibold">@Model.MonthSalesCount</p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Most Sold Product</h6>
                            <p class="fs-5 fw-semibold m-0">
                                @(Model.TodayTopProduct ?? "No sales today")
                            <p class="m-0 text-muted">(@Model.MonthTopProductQuantity sold)</p>
                            </p>
                        </div>

                        <div class="col-6 col-lg-3 mb-3">
                            <h6 class="fw-bold text-primary">Average Sale Value</h6>
                            <p class="fs-5 fw-semibold">
                                @(Model.MonthSalesCount > 0
                                        ? Math.Round((Model.MonthRevenue / Model.MonthSalesCount), 2).ToString("C")
                                        : 0)
                            </p>
                        </div>

                    </div>

                </div>
        </div>
      </div>
   </div>



</div>

<!-- TOTAL REVENUE MODAL -->
<div class="modal fade" id="exampleModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header">
                <h5 class="modal-title">Total Revenue</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h3 class="fw-bold text-center">@Model.TotalRevenue.ToString("C")</h3>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <!-- Chart.js Script -->
    <script>
        var labels = @Html.Raw(Json.Serialize(Model.SalesOverTime.Select(x => x.Date.ToShortDateString())));
        var data = @Html.Raw(Json.Serialize(Model.SalesOverTime.Select(x => x.TotalSales)));

        new Chart(document.getElementById("salesChart"), {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: "Sales Over Time",
                    data: data,
                    tension: 0.4,
                    borderWidth: 3
                }]
            }
        });


        // payment graph script 
             const numOfMobileMoney = @Model.numOfMobileMoney;
        const numOfCash = @Model.numOfCash;
        const numOfCard = @Model.numOfCard;

        const ctx = document.getElementById('paymentChart');

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Mobile Money', 'Cash', 'Card'],
                datasets: [{
                    data: [numOfMobileMoney, numOfCash , numOfCard],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    }
                }
            }
        });

        //script for top products
         const topProdLabels = @Html.Raw(Json.Serialize(Model.TopProductNames));
        const topProdData = @Html.Raw(Json.Serialize(Model.TopProductQuantities));

        new Chart(document.getElementById("topProductsChart"), {
            type: 'doughnut',
            data: {
                labels: topProdLabels,
                datasets: [{
                    data: topProdData,
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>

    <style>
        .kpi-card {
            position: relative;
            overflow: hidden;
        }

        .kpi-icon {
            position: absolute;
            right: 15px;
            bottom: 15px;
            opacity: 0.2; 
        }

        .border-start-primary {
            border-left: 5px solid #4e73df !important;
        }

        .border-start-success {
            border-left: 5px solid #1cc88a !important;
        }

        .border-start-info {
            border-left: 5px solid #36b9cc !important;
        }

        .border-start-warning {
            border-left: 5px solid #f6c23e !important;
        }

        .border-start-dark {
            border-left: 5px solid #5a5c69 !important;
        }
    </style>

}
