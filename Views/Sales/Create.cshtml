@model SalesSystem.ViewModels.SaleCreateDraftViewModel

@{
    ViewData["Title"] = "Start New Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Start New Sale</h1>
<h4>Step 1: Choose Customer and Payment Method</h4>
<hr />



<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="Model.CustomerList">
                    <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<SalesSystem.Models.PaymentMethod>()">
                    <option value="">-- Select Payment Method --</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Start Sale & Add Items" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Sales History</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}